@model GrowTree.Web.ViewModels.PackageActivationViewModel


<h2 class="page-title">Packages</h2>

<div class="package-container">

  
    <div class="card">
        <h3>Package Activation</h3>

        <form asp-action="Activate" method="post">
            <label>User ID</label>
            <input asp-for="ActivateUserId" class="form-control" />

            <label>Package</label>
            <select asp-for="SelectedPackageId" class="form-control">
                @foreach (var pkg in Model.Packages)
                    

                {
                    <option value="@pkg.PackageId">
                        @pkg.PackageName ($@pkg.Price)
                    </option>
                }
            </select>

            <button type="submit" class="btn btn-success mt-2">
                Activate
            </button>
        </form>
    </div>

    
    <div class="card">
        <h3>Package Upgrade</h3>

        <form asp-action="Upgrade" method="post">
            <label>User ID</label>
            <input asp-for="UpgradeUserId" class="form-control" />

            <button type="submit" class="btn btn-dark mt-2">
                Upgrade
            </button>
        </form>
    </div>

</div>
